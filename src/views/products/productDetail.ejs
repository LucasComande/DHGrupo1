<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pegasus Sport Center</title>    
    <link rel="stylesheet" href="/css/normalize.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"rel="stylesheet">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/productDetail.css">
</head>
<body>
    <header>     
        <div class="main-header">
            <div class="container-flex">
                <div class="main-header__container"> 
                  <a href="/"><img class="main-header__img" src="/images/logo-dCompras-01.svg" alt="Logo dCompras"></a>       
                </div>                               
            </div>            
        </div> 
    </header>
    <div class="banner-psc">
        <img src="/images/carrusel3.jfif" alt="Banner">
    </div> 
 <main>
   <section class="productDetails">
    <!-- <div class="breadcrumbs">
       Home > Categoria X > Zapatillas Grand Court Se -blanco adidas
    </div> -->
    <% if (productoId != undefined) { %> 
    <div class="detail-container">
        <div class="left-col">
          <div class="img-product">
              <img src="/images/<%= productoId.img1 %>" />
          </div>
          <div class="carrousel-img">
            <div><img src="/images/<%= productoId.img2 %>" /></div>
            <div><img src="/images/<%= productoId.img3 %>" /></div>
            <div><img src="/images/<%= productoId.img4 %>" /></div>
          </div>
        </div>
        <div class="right-col">
            <div class="reputation">
                <a>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                </a>
               <span> | 36 vendidos</span>
            </div>
             <div class="product-info">
                 <h2 class="product-name"><%= productoId.name %></h2>
                 <div class="img-product">
                    <img src="images/demo-product-1.jpg" />
                </div>
                 <h3 class="product-price">$<%= productoId.price %></h3>
                 <p class="stock">Stock disponible</p>
             </div>
             <div class="quantity-btn">
                 <button class="minus">-</button>
                 <input type="number" class="quantity-prodcut" value="1">
                 <button class="plus">+</button>
             </div>
             <div class="actions">
                 <button class="btn primary-btn">Comprar</button>
                 <button class="btn secondary-btn">Agregar al carrito</button>
             </div>
             <div class="product-description">
                 <p>Descripci√≥n del producto</p>
                 <p><%= productoId.description %></p>
             </div>
        </div>
     </div>
     <% } else { %>
        <h2>No existe ese producto</h2>
     <% } %>
    </section>
  </main>
    <%- include('../partials/footer') %>
    </body>
</html>